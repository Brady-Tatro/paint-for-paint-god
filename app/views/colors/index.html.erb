<div>
  <%= form_tag(pictures_path, :method => "get", id: "search-form") do %>
  <% @colors.each do |color| %>
    <ul style="background-color: <%= color.hex %>"><%= check_box_tag(:search, "#{color.name}") %>
    <%= label_tag("#{color.name}") %></ul>
  <% end %>
  <%= submit_tag "Search", :name => nil %>
  <% end %>
</div>
<div>
  <% paints = Color.all %>
  <% @paint_name = ["None"] %>
  <% paints.each do |paint| %>
    <% @paint_name << paint.name %>
  <% end %>
  <%= select :primer, options_for_select(@paint_name) %>

</div>
