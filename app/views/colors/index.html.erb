<div>
  <%= form_tag(pictures_path, :method => "get", id: "search-form") do %>
  <% @colors.each do |color| %>
    <ul style="background-color: <%= color.hex %>"><%= check_box_tag(:search, "#{color.name}") %>
    <%= label_tag("#{color.name}") %></ul>
  <% end %>
  <%= submit_tag "Search", :name => nil %>
  <% end %>
</div>
